{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Redis": {
    "Host": "localhost:6379",
    "Password": "",
    "UseTls": false
  },
  "OpenIdConnectOptions": {
    "CookieName": "__BFF",
    "ClientId": "your-client-id",
    "ClientSecret": "",
    "ResponseType": "code",
    "ResponseMode": "query",
    "GetClaimsFromUserInfoEndpoint": true,
    "MapInboundClaims": false,
    "SaveTokens": true,
    "Scope": "openid profile offline_access",
    "AuthorityPath": "realms/development",
    "RequireHttpsMetadata": false,
    "RequireSecureCookies": false,
    "RedirectUri": "/"
  },
  "ReverseProxy": {
    "Routes": {
      "backend-route": {
        "ClusterId": "backend-api",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "backend-api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5000"
          }
        }
      }
    }
  }
}
